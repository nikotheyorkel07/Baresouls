  },
  { 
    icon: Sparkles, 
    text: "Need self-care and mindfulness tips",
    color: "from-yellow-400 to-orange-400"
  },
  { 
    icon: Home, 
    text: "Feeling lonely and disconnected",
    color: "from-indigo-400 to-purple-400"
  },
];

export default function SuggestedPrompts({ onSelect, onClose }) {
  return (
    <div className="absolute bottom-20 left-0 right-0 glass-card border border-white/30 rounded-t-3xl p-6 max-h-[60vh] overflow-y-auto">
      <div className="max-w-lg mx-auto">
